<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="./stylesheets/rejected.css" />
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div id="cover">
          <div class="dropdown flex align-items-end">
            <button
              class="btn btn-secondary dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Rejected Inquiry
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/allenquiry">All Inquiry</a>
              </li>
              <li><a class="dropdown-item" href="/inquiry">Add Inquiry</a></li>
            </ul>
            <form action="/rejected" class="flex align-items-end">
              <div class="col-md-9">
                <label for="inputZip">Contact</label>
                <input
                  name="contactNumber"
                  type="number"
                  class="form-control"
                  id="inputZip"
                  placeholder="Enter Contact"
                />
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/rejected">
                <button type="button" class="btn btn-success">Reset</button>
              </a>
            </form>
          </div>
          <div id="inq">
            <h4>Inquiry List</h4>
            <table class="table">
              <thead>
                <tr class="table-info">
                  <th scope="col">Name</th>
                  <th scope="col">Mobile</th>
                  <th scope="col">Course</th>
                  <th scope="col">Enquiry Date</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student=>{ %>
                <tr>
                  <th scope="row"><%= student.firstName %></th>
                  <td><%= student?.contactNumber %></td>
                  <td><%= student?.course?.courseName %></td>
                  <td><%= student?.createdAt?.toDateString() %></td>
                  <td class="d-flex gap-3">
                    <a style="font-size: 25px" href="/delete/enquiry/<%= student._id %>"> ❌ </a>
                    <a style="font-size: 25px" href="/accepted/enquiry/<%= student._id %>"> ✅ </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
