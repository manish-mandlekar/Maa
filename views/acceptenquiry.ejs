<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/inquiry.css" />
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div id="cover">
          <div class="inq">
            <form
              action="/accepted/enquiry/<%= student._id %>"
              method="post"
              class="row g-3"
            >
              <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Student Name</label>
                <input
                  required
                  type="text"
                  placeholder="Enter First Name"
                  name="firstName"
                  value="<%= student?.firstName %>"
                  class="form-control"
                  id="inputEmail4"
                />
              </div>
              <div class="col-md-6">
                <label for="inputPassword4" class="form-label"
                  >Student Surname</label
                >
                <input
                  required
                  type="text"
                  name="lastName"
                  value="<%= student?.lastName %>"
                  placeholder="Enter Last Name"
                  class="form-control"
                  id="inputPassword4"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label"
                  >Student Email</label
                >
                <input
                  required
                  type="email"
                  name="email"
                  value="<%= student?.email %>"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Email Address"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label"
                  >Name of Father / Husband</label
                >
                <input
                  required
                  type="text"
                  name="fatherName"
                  value="<%= student?.fatherName %>"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Name Of Father / Husband"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress2" class="form-label"
                  >Contact Number/ WhatsAap Number</label
                >
                <input
                  required
                  type="number"
                  name="contactNumber"
                  value="<%= student?.contactNumber %>"
                  class="form-control"
                  id="inputAddress2"
                  placeholder="Enter Contact Number"
                />
              </div>
              <div class="col-md-6">
                <label for="inputCity" class="form-label">Qualification</label>
                <input
                  required
                  name="qualification"
                  value="<%= student?.qualification %>"
                  type="text"
                  class="form-control"
                  placeholder="Enter Qualification"
                  id="inputCity"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label"
                  >Permanent Address</label
                >
                <input
                  name="address"
                  value="<%= student?.address %>"
                  required
                  type="text"
                  placeholder="Address"
                  class="form-control"
                  id="inputZip"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Enquiry Date</label>
                <input
                  name="enquiryDate"
                  value="<%= student?.enquiryDate.toISOString().split('T')[0] %>"
                  required
                  type="date"
                  class="form-control"
                  id="inputZip"
                />
              </div>
              <div class="inq">
                <div class="col-md-4" style="margin-bottom: 1vmax">
                  <label for="male">Male</label>
                  <input
                    required
                    type="radio"
                    id="male"
                    name="gender"
                    value="male"
                  />

                  <label for="female">Female</label>
                  <input
                    required
                    type="radio"
                    id="female"
                    name="gender"
                    value="female"
                  />
                </div>

                <div class="row g-3">
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label"
                      >Select Course</label
                    >
                    <select name="course" class="form-select" required>
                      <option selected disabled>Choose a course...</option>
                      <% course.forEach(function(singlecourse) { %>
                      <option value="<%= singlecourse._id %>">
                        <%= singlecourse.courseCode %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label"
                      >Select University</label
                    >
                    <select name="course" class="form-select" required>
                      <option selected disabled>Choose a University...</option>
                      <% universities.forEach(function(university) { %>
                      <option value="<%= university._id %>" >
                        <%= university.name %> <%=university.location %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label">Session</label>
                    <select name="session" class="form-select" required>
                      <option selected disabled>Choose a Session...</option>
                      <option value="2023-2024">2022-2023</option>
                      <option value="2023-2024">2023-2024</option>
                      <option value="2024-2025">2024-2025</option>
                      <option value="2025-2026">2025-2026</option>
                      <option value="2026-2027">2026-2027</option>
                      <option value="2027-2028">2027-2028</option>
                      <option value="2028-2029">2028-2029</option>
                    </select>
                  </div>

                  <div class="col-6">
                    <label for="inputAddress" class="form-label"
                      >Enquiry By</label
                    >
                    <input
                      required
                      type="text"
                      name="enquiryBy"
                      value="<%= student?.enquiryBy %>"
                      class="form-control"
                      id="inputAddress"
                      placeholder="Enter Name"
                    />
                  </div>
                  <div class="col-6">
                    <label for="inputAddress2" class="form-label">
                      Like To Join
                    </label>
                    <input
                      required
                      type="date"
                      name="joiningDate"
                      value="<%= student?.joiningDate?.toISOString()?.split('T')[0] %>"
                      class="form-control"
                      id="inputAddress2"
                    />
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label"
                      >You Came To Know About Institute By:</label
                    >
                    <select
                      id="inputState"
                      name="reference"
                      class="form-select"
                    >
                      <option selected>Choose...</option>
                      <option>Sign Board</option>
                      <option>Advertisement Papers</option>
                      <option>Google Search</option>
                      <option>Instagram</option>
                      <option>Facebook</option>
                      <option>Personal Reference</option>
                      <option>Other</option>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label"
                      >Registration Payment Mode:</label
                    >
                    <select
                      name="registrationPaymentMode"
                      id="inputState"
                      class="form-select"
                    >
                      <option selected>Cash</option>
                      <option>Phone pe</option>
                      <option>Google pay</option>
                      <option>Cheque</option>
                    </select>
                  </div>
                </div>
                <div class="row g-3" style="margin-top: 1vmax">
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"
                      >Installment</label
                    >
                    <input
                      required
                      type="number"
                      name="installment"
                      value="<%= student?.installment %>"
                      class="form-control"
                      id="inputEmail4"
                      placeholder="Enter Installment Amount"
                    />
                  </div>
                  <div class="col-md-6" style="margin-top: 1vmax">
                    <label for="inputPassword4" class="form-label">Due</label>
                    <input
                      required
                      type="number"
                      name="due"
                      value="<%= student?.due %>"
                      class="form-control"
                      id="inputPassword4"
                      placeholder="Enter Due Amount"
                    />
                  </div>
                </div>
                <div class="col-md-4" style="margin-top: 1vmax">
                  <label for="inputState" class="form-label"
                    >Registration Payment:</label
                  >
                  <select
                    name="registrationPayment"
                    id="inputState"
                    class="form-select"
                  >
                    <option selected>Done</option>
                    <option>Not Done</option>
                  </select>
                </div>
                <div class="col-md-6" style="margin-top: 1vmax">
                  <label for="inputPassword4" class="form-label"
                    >Due Amount Date</label
                  >
                  <input
                    required
                    type="date"
                    name="dueDate"
                    
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Enter Due Amount date"
                  />
                </div>

                <div class="col-12" style="margin-top: 1vmax">
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
