<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/inquiry.css" />
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div id="cover">
          <div class="inq">
            <form
              action="/accepted/enquiry/<%= student._id %>"
              method="post"
              class="row g-3"
            >
              <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Student Name</label>
                <input
                  required
                  type="text"
                  placeholder="Enter First Name"
                  name="firstName"
                  class="form-control"
                  id="inputEmail4"
                  value="<%= student.firstName || '' %>"
                />
              </div>
              <div class="col-md-6">
                <label for="inputPassword4" class="form-label"
                  >Student Surname</label
                >
                <input
                  required
                  type="text"
                  name="lastName"
                  placeholder="Enter Last Name"
                  class="form-control"
                  id="inputPassword4"
                  value="<%= student.lastName || '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label"
                  >Student Email</label
                >
                <input
                  required
                  type="email"
                  name="email"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Email Address"
                  value="<%= student.email || '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label"
                  >Name of Father / Husband</label
                >
                <input
                  required
                  type="text"
                  name="fatherName"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Name Of Father / Husband"
                  value="<%= student.fatherName || '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label"
                  >Permanent Address</label
                >
                <input
                  required
                  type="text"
                  name="address"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Your Permanent Address"
                  value="<%= student.address || '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress2" class="form-label"
                  >Contact Number</label
                >
                <input
                  required
                  type="number"
                  name="contactNumber"
                  class="form-control"
                  id="inputAddress2"
                  placeholder="Enter Contact Number"
                  value="<%= student.contactNumber || '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress2" class="form-label"
                  >WhatsApp Number</label
                >
                <input
                  required
                  type="number"
                  name="whatsappNumber"
                  class="form-control"
                  id="inputAddress2"
                  placeholder="Enter WhatsApp Number"
                  value="<%= student.whatsappNumber || '' %>"
                />
              </div>
              <div class="col-md-6">
                <label for="inputCity" class="form-label">Qualification</label>
                <input
                  required
                  name="qualification"
                  type="text"
                  class="form-control"
                  placeholder="Enter Qualification"
                  id="inputCity"
                  value="<%= student.qualification || '' %>"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Main Subject</label>
                <input
                  name="mainSubject"
                  required
                  type="text"
                  placeholder="Main Subject"
                  class="form-control"
                  id="inputZip"
                  value="<%= student.mainSubject || '' %>"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Enquiry Date</label>
                <input
                  name="enquiryDate"
                  required
                  type="date"
                  class="form-control"
                  id="inputZip"
                  value="<%= student.enquiryDate ? new Date(student.enquiryDate).toISOString().split('T')[0] : '' %>"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Date Of Birth</label>
                <input
                  name="dateOfBirth"
                  required
                  type="date"
                  class="form-control"
                  id="inputZip"
                  value="<%= student.dateOfBirth ? new Date(student.dateOfBirth).toISOString().split('T')[0] : '' %>"
                />
              </div>
              <div class="inq">
                <div class="col-md-4" style="margin-bottom: 1vmax">
                  <label for="male">Male</label>
                  <input
                    required
                    type="radio"
                    id="male"
                    name="gender"
                    value="male"
                    <%= student.gender === 'male' ? 'checked' : '' %>
                  />

                  <label for="female">Female</label>
                  <input
                    required
                    type="radio"
                    id="female"
                    name="gender"
                    value="female"
                    <%= student.gender === 'female' ? 'checked' : '' %>
                  />
                </div>

                <div class="row g-3">
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label"
                      >Select Course</label
                    >
                    <select name="course" class="form-select" required>
                      <option disabled <%= !student.course ? 'selected' : '' %>>Choose a course...</option>
                      <% course.forEach(function(singlecourse) { %>
                      <option value="<%= singlecourse._id %>" <%= student.course && student.course.toString() === singlecourse._id.toString() ? 'selected' : '' %>>
                        <%= singlecourse.courseName %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label">Medium</label>
                    <select name="medium" class="form-select" required>
                      <option disabled <%= !student.medium ? 'selected' : '' %>>Choose Medium...</option>
                      <option value="english" <%= student.medium === 'english' ? 'selected' : '' %>>English Medium</option>
                      <option value="hindi" <%= student.medium === 'hindi' ? 'selected' : '' %>>Hindi Medium</option>
                    </select>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label"
                      >Select University</label
                    >
                    <select name="university" class="form-select" required>
                      <option disabled <%= !student.university ? 'selected' : '' %>>Choose a University...</option>
                      <% universities.forEach(function(university) { %>
                      <option value="<%= university.name %>" <%= student.university === university.name ? 'selected' : '' %>>
                        <%= university.name %> <%=university.location %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Session</label>
                    <select name="session" class="form-select" required>
                      <option disabled <%= !student.session ? 'selected' : '' %>>Choose a Session...</option>
                      <% [ "2022-2023", "2023-2024", "2024-2025", "2025-2026",
                      "2026-2027", "2027-2028", "2028-2029","2029-2030"
                      ].forEach(function(session) { %>
                      <option value="<%= session %>" <%= student.session === session ? 'selected' : '' %>><%= session %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"
                      >Session Month</label
                    >
                    <select name="sessionMonth" class="form-select" required>
                      <option selected disabled>
                        Choose a Session Month...
                      </option>
                      <% ["January", "February", "March", "April", "May",
                      "June", "July", "August", "September", "October",
                      "November", "December" ].forEach(function(month) { %>
                      <option value="<%= month %>" <%= student?.sessionMonth === month ? 'selected' : '' %>><%= month %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="row mb-3 mt-3">
                    <div class="col-md-3">
                      <label for="yearOfPassing" class="form-label"
                        >Year of Passing</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        id="yearOfPassing"
                        name="yearOfPassing"
                        placeholder="e.g. 2023"
                        required
                        value="<%= student.yearOfPassing || '' %>"
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="division" class="form-label">Division</label>
                      <select
                        class="form-select"
                        id="division"
                        name="division"
                        required
                      >
                        <option value="" <%= !student.division ? 'selected' : '' %>>Select</option>
                        <option value="1" <%= student.division === '1' ? 'selected' : '' %>>1st Division</option>
                        <option value="2" <%= student.division === '2' ? 'selected' : '' %>>2nd Division</option>
                        <option value="3" <%= student.division === '3' ? 'selected' : '' %>>3rd Division</option>
                        <option value="4" <%= student.division === '4' ? 'selected' : '' %>>Pass</option>
                      </select>
                    </div>
                    <div class="col-md-3">
                      <label for="marksPercentage" class="form-label"
                        >% of Marks</label
                      >
                      <input
                        type="number"
                        step="0.01"
                        class="form-control"
                        id="marksPercentage"
                        name="percentageOfMarks"
                        placeholder="e.g. 75.50"
                        required
                        value="<%= student.percentageOfMarks || '' %>"
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="boardUniversity" class="form-label"
                        >Board/University</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="boardUniversity"
                        name="boardOrUniversity"
                        placeholder="e.g. CBSE, RGPV"
                        required
                        value="<%= student.boardOrUniversity || '' %>"
                      />
                    </div>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label"
                      >Category (Caste)</label
                    >
                    <select name="category" class="form-select" required>
                      <option disabled <%= !student.category ? 'selected' : '' %>>Choose Caste...</option>
                      <option value="SC" <%= student.category === 'SC' ? 'selected' : '' %>>Scheduled Castes (SC)</option>
                      <option value="ST" <%= student.category === 'ST' ? 'selected' : '' %>>Scheduled Tribes (ST)</option>
                      <option value="OBC" <%= student.category === 'OBC' ? 'selected' : '' %>>Other Backward Classes (OBC)</option>
                      <option value="General" <%= student.category === 'General' ? 'selected' : '' %>>General</option>
                    </select>
                  </div>
                  <div class="col-12">
                    <label for="inputAddress2" class="form-label"
                      >UID Number</label
                    >
                    <input
                      required
                      type="number"
                      name="addharNo"
                      class="form-control"
                      id="inputAddress2"
                      placeholder="Enter UID Number"
                      value="<%= student.addharNo || '' %>"
                    />
                  </div>
                  <div class="row mb-3 mt-3">
                    <!-- Family Income -->
                    <div class="col-md-4">
                      <label for="familyIncome" class="form-label"
                        >Family Income (Yearly)</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        id="familyIncome"
                        name="familyIncome"
                        placeholder="e.g. 500000"
                        required
                        value="<%= student.familyIncome || '' %>"
                      />
                    </div>

                    <!-- Religion -->
                    <div class="col-md-4">
                      <label for="religion" class="form-label">Religion</label>
                      <select
                        class="form-select"
                        id="religion"
                        name="religion"
                        required
                      >
                        <option value="" <%= !student.religion ? 'selected' : '' %>>Select Religion</option>
                        <option value="Hindu" <%= student.religion === 'Hindu' ? 'selected' : '' %>>Hindu</option>
                        <option value="Muslim" <%= student.religion === 'Muslim' ? 'selected' : '' %>>Muslim</option>
                        <option value="Christian" <%= student.religion === 'Christian' ? 'selected' : '' %>>Christian</option>
                        <option value="Sikh" <%= student.religion === 'Sikh' ? 'selected' : '' %>>Sikh</option>
                        <option value="Buddhist" <%= student.religion === 'Buddhist' ? 'selected' : '' %>>Buddhist</option>
                        <option value="Jain" <%= student.religion === 'Jain' ? 'selected' : '' %>>Jain</option>
                        <option value="Other" <%= student.religion === 'Other' ? 'selected' : '' %>>Other</option>
                      </select>
                    </div>

                    <!-- Marital Status -->
                    <div class="col-md-4">
                      <label for="maritalStatus" class="form-label"
                        >Marital Status</label
                      >
                      <select
                        class="form-select"
                        id="maritalStatus"
                        name="maritalStatus"
                        required
                      >
                        <option value="" <%= !student.maritalStatus ? 'selected' : '' %>>Select Status</option>
                        <option value="Single" <%= student.maritalStatus === 'Single' ? 'selected' : '' %>>Single</option>
                        <option value="Married" <%= student.maritalStatus === 'Married' ? 'selected' : '' %>>Married</option>
                        <option value="Widowed" <%= student.maritalStatus === 'Widowed' ? 'selected' : '' %>>Widowed</option>
                        <option value="Divorced" <%= student.maritalStatus === 'Divorced' ? 'selected' : '' %>>Divorced</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-6">
                    <label for="inputAddress" class="form-label"
                      >Enquiry By</label
                    >
                    <input
                      required
                      type="text"
                      name="enquiryBy"
                      class="form-control"
                      id="inputAddress"
                      placeholder="Enter Name"
                      value="<%= student.enquiryBy || '' %>"
                    />
                  </div>
                  <div class="col-6">
                    <label for="inputAddress2" class="form-label">
                      Like To Join
                    </label>
                    <input
                      required
                      type="date"
                      name="joiningDate"
                      class="form-control"
                      id="inputAddress2"
                      value="<%= student.joiningDate ? new Date(student.joiningDate).toISOString().split('T')[0] : '' %>"
                    />
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label"
                      >You Came To Know About Institute By:</label
                    >
                    <select
                      id="inputState"
                      name="reference"
                      class="form-select"
                    >
                      <option <%= !student.reference ? 'selected' : '' %>>Choose...</option>
                      <option <%= student.reference === 'Sign Board' ? 'selected' : '' %>>Sign Board</option>
                      <option <%= student.reference === 'Advertisement Papers' ? 'selected' : '' %>>Advertisement Papers</option>
                      <option <%= student.reference === 'Google Search' ? 'selected' : '' %>>Google Search</option>
                      <option <%= student.reference === 'Instagram' ? 'selected' : '' %>>Instagram</option>
                      <option <%= student.reference === 'Facebook' ? 'selected' : '' %>>Facebook</option>
                      <option <%= student.reference === 'Personal Reference' ? 'selected' : '' %>>Personal Reference</option>
                      <option <%= student.reference === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label"
                      >Registration Payment Mode:</label
                    >
                    <select
                      name="registrationPaymentMode"
                      id="inputState"
                      class="form-select"
                    >
                      <option <%= student.registrationPaymentMode === 'Cash' || !student.registrationPaymentMode ? 'selected' : '' %>>Cash</option>
                      <option <%= student.registrationPaymentMode === 'Phone pe' ? 'selected' : '' %>>Phone pe</option>
                      <option <%= student.registrationPaymentMode === 'Google pay' ? 'selected' : '' %>>Google pay</option>
                      <option <%= student.registrationPaymentMode === 'Cheque' ? 'selected' : '' %>>Cheque</option>
                    </select>
                  </div>
                </div>

                <div class="row g-3" style="margin-top: 1vmax">
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"
                      >Installment</label
                    >
                    <input
                      required
                      type="number"
                      name="installment"
                      class="form-control"
                      id="inputEmail4"
                      placeholder="Enter Installment Amount"
                      value="<%= student.installment || '' %>"
                    />
                  </div>
                  <div class="col-md-6" style="margin-top: 1vmax">
                    <label for="inputPassword4" class="form-label">Due</label>
                    <input
                      required
                      type="number"
                      name="due"
                      class="form-control"
                      id="inputPassword4"
                      placeholder="Enter Due Amount"
                      value="<%= student.due || '' %>"
                    />
                  </div>
                </div>
                <div class="col-md-4" style="margin-top: 1vmax">
                  <label for="inputState" class="form-label"
                    >Registration Payment:</label
                  >
                  <select
                    name="registrationPayment"
                    id="inputState"
                    class="form-select"
                  >
                    <option <%= student.registrationPayment === 'Done' || !student.registrationPayment ? 'selected' : '' %>>Done</option>
                    <option <%= student.registrationPayment === 'Not Done' ? 'selected' : '' %>>Not Done</option>
                  </select>
                </div>
                <div class="col-md-6" style="margin-top: 1vmax">
                  <label for="inputPassword4" class="form-label"
                    >Due Amount Date</label
                  >
                  <input
                    required
                    type="date"
                    name="dueDate"
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Enter Due Amount date"
                    value="<%= student.dueDate ? new Date(student.dueDate).toISOString().split('T')[0] : '' %>"
                  />
                </div>

                <div class="col-12" style="margin-top: 1vmax">
                  <button type="submit" class="btn btn-primary">Update Student</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>