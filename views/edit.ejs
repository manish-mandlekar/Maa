<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/edit.css" />
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div class="pop">
          <div class="dbai">
            <div id="popupForm" class="popup-container">
              <form
                action="/update/due/<%= type %>/<%= founduser._id %>"
                method="POST"
              >
                <h2>Due Amount Fees</h2>
                <label for="name">Name:</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  value="<%=founduser.firstName %> <%=founduser.lastName %>"
                  disabled
                />

                <label for="email">Contact Number</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  value="<%=founduser.contactNumber %>"
                  disabled
                />

                <label for="due">Due Amount</label>
                <input
                  type="email"
                  id="due"
                  name="due"
                  value="<%= founduser.due %>"
                  disabled
                />
                <div class="col-md-12">
                  <label for="inputState" class="form-label"
                    >Registration Payment Mode:</label
                  >
                  <select
                    name="registrationPaymentMode"
                    id="inputState"
                    class="form-select"
                  >
                    <option selected>Cash</option>
                    <option>Phone pe</option>
                    <option>Google pay</option>
                    <option>Paytm</option>
                    <option>Cheque</option>
                  </select>
                </div>
                <div class="col-md-12">
                  <label for="inputState" class="form-label mt-2"
                    >Fee Type:</label
                  >
                  <select name="feeType" id="inputState" class="form-select">
                    <option selected>Regular Fee</option>
                    <option>Monthly Fee</option>
                    <option>Late Fee</option>
                    <option>Exam Fee</option>
                    <option>Other</option>
                  </select>
                </div>

                <label for="paid" class="mt-2">Amount Paid:</label>
                <input type="number" id="paid" name="paid" required />

                <button type="submit">Update</button>
                <a href="/fees"><button type="button">Cancel</button></a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script></script>
  </body>
</html>
