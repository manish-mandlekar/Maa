<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="./stylesheets/student.css" />
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div class="inq">
          <div class="cola">
            <form class="row g-3 mb-4" method="GET" action="/student">
              <div class="col-md-3">
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="Search by name"
                  value="<%= query.name || '' %>"
                />
              </div>
              <div class="col-md-3">
                <input
                  type="text"
                  class="form-control"
                  name="contactNumber"
                  placeholder="Mobile Number"
                  value="<%= query.contactNumber || '' %>"
                />
              </div>
              
              <div class="col-md-3">
                <select class="form-select" name="session">
                  <option value="">All Sessions</option>
                  <% sessions.forEach(session => { %>
                  <option value="<%= session %>"  <%= query.session === session ? 'selected' : '' %>><%= session %></option>
                  <% }) %>
                </select>
                <select class="form-select mt-2" name="sessionMonth">
                  <option value="">Session Month</option>
                  <% sessionMonths.forEach(month => { %>
                  <option value="<%= month %>"  <%= query.sessionMonth === month ? 'selected' : '' %>><%= month %></option>
                  <% }) %>
                </select>
              </div>
              <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                  Filter
                </button>
                <!-- clear filter btn -->
                <a href="/student" class="btn btn-secondary w-100 mt-2">
                  Clear Filter
                </a>
              </div>
            </form>
            <h2>Registered Student Details</h2>
            <div class="mt-5">
              <table class="table">
                <thead>
                  <tr class="table-info">
                    <th>R No.</th>
                    <th>Name</th>
                    <th>Mobile No.</th>
                    <th>Course</th>
                    <th>Admission Date</th>
                    <th>Session</th>
                  </tr>
                </thead>
                <tbody>
                  <% std.forEach((std,i) => {%>
                  <tr>
                    <td><%= std.r_no %></td>
                    <td>
                      <a href="/stdprofile/<%=std._id %>"
                        ><%=std.firstName %> <%=std.lastName %></a
                      >
                    </td>
                    <td><%=std.contactNumber %></td>
                    <td><%= std?.course[0]?.courseCode %></td>

                    <td><%=std?.joiningDate?.toDateString() %></td>
                    <td><%=std.session %>(<%=std.sessionMonth %>)</td>
                  </tr>
                  <% }) %>
                  <!-- Add more rows for additional students -->
                </tbody>
              </table>
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                  <% Array.from({ length: totalPages }, (_, i) => i +
                  1).forEach(p => { %>
                  <li
                    class="page-item <%= p === currentPage ? 'active' : '' %>"
                  >
                    <a
                      class="page-link"
                      href="?<%= new URLSearchParams({ ...query, page: p }).toString() %>"
                      ><%= p %></a
                    >
                  </li>
                  <% }) %>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
