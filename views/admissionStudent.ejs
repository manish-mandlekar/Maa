<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admission Students</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="./stylesheets/student.css" />
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        
        <div class="inq">
          <div class="cola">
            <!-- Mobile-First Filter Section -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="fas fa-search me-2 text-primary"></i>Search Admission Students
                </h5>
                
                <form method="GET" action="/admission-student">
                  <!-- Search Inputs Row -->
                  <div class="row g-3 mb-3">
                    <div class="col-12 col-md-6">
                      <div class="input-group">
                        <span class="input-group-text">
                          <i class="fas fa-user"></i>
                        </span>
                        <input
                          type="text"
                          class="form-control"
                          name="name"
                          placeholder="Search by name"
                          value="<%= query.name || '' %>"
                        />
                      </div>
                    </div>
                    
                    <div class="col-12 col-md-6">
                      <div class="input-group">
                        <span class="input-group-text">
                          <i class="fas fa-phone"></i>
                        </span>
                        <input
                          type="text"
                          class="form-control"
                          name="contactNumber"
                          placeholder="Mobile Number"
                          value="<%= query.contactNumber || '' %>"
                        />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Action Buttons -->
                  <div class="row g-2">
                    <div class="col-12 col-sm-6">
                      <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Apply Filter
                      </button>
                    </div>
                    <div class="col-12 col-sm-6">
                      <a href="/admission-student" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-2"></i>Clear Filter
                      </a>
                    </div>
                  </div>
                </form>
              </div>
            </div>

            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
              <div class="mb-2 mb-md-0">
                <h2 class="mb-0">
                  <i class="fas fa-user-plus me-2 text-success"></i>
                  Admission Students
                </h2>
                <small class="text-muted">Manage student admissions and payments</small>
              </div>
              <div class="d-flex gap-2 flex-wrap">
                <span class="badge bg-success fs-6 px-3 py-2">
                  <i class="fas fa-users me-1"></i>Total: <%= std.length %>
                </span>
                <span class="badge bg-info fs-6 px-3 py-2">
                  <i class="fas fa-user-plus me-1"></i>Admissions
                </span>
              </div>
            </div>

            <!-- Desktop Table View -->
            <div class="d-none d-lg-block">
              <div class="card shadow-sm">
                <div class="table-responsive">
                  <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                      <tr>
                        <th><i class="fas fa-hashtag me-1"></i>Roll No.</th>
                        <th><i class="fas fa-user me-1"></i>Name</th>
                        <th><i class="fas fa-phone me-1"></i>Mobile No.</th>
                        <th><i class="fas fa-book me-1"></i>Course</th>
                        <th><i class="fas fa-calendar-plus me-1"></i>Admission Date</th>
                        <th class="text-center"><i class="fas fa-cogs me-1"></i>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% std.forEach((student, i) => { %>
                      <tr>
                        <td class="fw-semibold text-primary">
                          <span class="badge bg-light text-dark border">
                            #<%= i + 1 %>
                          </span>
                        </td>
                        <td>
                          <div class="d-flex align-items-center">
                            <div class="me-2">
                              <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                   style="width: 40px; height: 40px; font-size: 0.875rem;">
                                <%= student.firstName.charAt(0).toUpperCase() %><%= student.lastName.charAt(0).toUpperCase() %>
                              </div>
                            </div>
                            <div>
                              <a href="/admprofile/<%= student._id %>" class="text-decoration-none fw-semibold text-primary">
                                <%= student.firstName %> <%= student.lastName %>
                              </a>
                              <div class="small text-muted">Admission Student</div>
                            </div>
                          </div>
                        </td>
                        <td>
                          <% if (student.contactNumber) { %>
                            <a href="tel:<%= student.contactNumber %>" class="text-decoration-none">
                              <i class="fas fa-phone-alt me-1 text-success"></i>
                              <%= student.contactNumber %>
                            </a>
                          <% } else { %>
                            <span class="text-muted">
                              <i class="fas fa-phone-slash me-1"></i>N/A
                            </span>
                          <% } %>
                        </td>
                        <td>
                          <% if (student?.course?.courseName) { %>
                            <span class="badge bg-info text-dark px-3 py-2">
                              <i class="fas fa-graduation-cap me-1"></i>
                              <%= student.course.courseName %>
                            </span>
                          <% } else { %>
                            <span class="badge bg-secondary">
                              <i class="fas fa-question me-1"></i>N/A
                            </span>
                          <% } %>
                        </td>
                        <td class="text-muted">
                          <i class="fas fa-calendar me-1 text-primary"></i>
                          <%= student?.joiningDate?.toDateString() || 'N/A' %>
                        </td>
                        <td class="text-center">
                          <a href="/edit/admission/<%= student._id %>" class="btn btn-success btn-sm">
                            <i class="fas fa-credit-card me-1"></i>
                            <span class="d-none d-xl-inline">Pay Fees</span>
                            <span class="d-xl-none">Pay</span>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <!-- Mobile Card View -->
            <div class="d-lg-none">
              <% std.forEach((student, i) => { %>
              <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                  <div class="row align-items-center">
                    <!-- Student Avatar & Info -->
                    <div class="col-3 col-sm-2 text-center">
                      <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2" 
                           style="width: 50px; height: 50px; font-weight: bold;">
                        <%= student.firstName.charAt(0).toUpperCase() %><%= student.lastName.charAt(0).toUpperCase() %>
                      </div>
                      <div class="small text-muted">#<%= i + 1 %></div>
                    </div>
                    
                    <!-- Student Details -->
                    <div class="col-6 col-sm-7">
                      <h6 class="card-title mb-2">
                        <a href="/admprofile/<%= student._id %>" class="text-decoration-none fw-bold text-primary">
                          <%= student.firstName %> <%= student.lastName %>
                        </a>
                      </h6>
                      
                      <div class="small text-muted">
                        <div class="mb-1">
                          <i class="fas fa-phone me-2 text-success" style="width: 15px;"></i>
                          <% if (student.contactNumber) { %>
                            <a href="tel:<%= student.contactNumber %>" class="text-decoration-none">
                              <%= student.contactNumber %>
                            </a>
                          <% } else { %>
                            N/A
                          <% } %>
                        </div>
                        
                        <div class="mb-1">
                          <i class="fas fa-graduation-cap me-2 text-info" style="width: 15px;"></i>
                          <%= student?.course?.courseName || 'N/A' %>
                        </div>
                        
                        <div>
                          <i class="fas fa-calendar me-2 text-warning" style="width: 15px;"></i>
                          <%= student?.joiningDate?.toDateString() || 'N/A' %>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Action Button -->
                    <div class="col-3 col-sm-3 text-end">
                      <a href="/edit/admission/<%= student._id %>" class="btn btn-success btn-sm w-100 d-flex flex-column align-items-center py-2">
                        <i class="fas fa-credit-card mb-1"></i>
                        <small>Pay</small>
                      </a>
                    </div>
                  </div>
                  
                  <!-- Mobile Badge -->
                  <div class="mt-2 pt-2 border-top">
                    <span class="badge bg-success me-2">
                      <i class="fas fa-user-plus me-1"></i>Admission Student
                    </span>
                    <% if (student?.course?.courseName) { %>
                      <span class="badge bg-info">
                        <%= student.course.courseName %>
                      </span>
                    <% } %>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>

            <!-- No Results Message -->
            <% if (std.length === 0) { %>
            <div class="text-center py-5">
              <div class="card shadow-sm border-0">
                <div class="card-body">
                  <div class="mb-4">
                    <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No admission students found</h4>
                  </div>
                  
                  <p class="text-muted mb-4">
                    <% if (query.name || query.contactNumber) { %>
                      No students match your search criteria. Try adjusting your search terms or clearing the filters.
                    <% } else { %>
                      No admission students are currently registered in the system.
                    <% } %>
                  </p>
                  
                  <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <a href="/addmission" class="btn btn-primary">
                      <i class="fas fa-refresh me-1"></i>Reset Search
                    </a>
                    <a href="/register" class="btn btn-outline-success">
                      <i class="fas fa-user-plus me-1"></i>Add New Student
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <% } %>

            <!-- Enhanced Pagination -->
            <% if (totalPages > 1) { %>
            <nav aria-label="Admission students pagination" class="mt-4">
              <ul class="pagination justify-content-center flex-wrap">
                <% 
                  // Calculate pagination range
                  let startPage = Math.max(1, currentPage - 2);
                  let endPage = Math.min(totalPages, currentPage + 2);
                  
                  // Build query string for pagination
                  const queryParams = new URLSearchParams(query);
                %>
                
                <!-- Previous Button -->
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="?<%= queryParams.toString() %>&page=<%= currentPage - 1 %>">
                    <i class="fas fa-chevron-left d-none d-sm-inline"></i>
                    <span class="d-sm-none">‹</span>
                    <span class="d-none d-md-inline ms-1">Previous</span>
                  </a>
                </li>
                <% } %>
                
                <!-- First page if not in range -->
                <% if (startPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="?<%= queryParams.toString() %>&page=1">1</a>
                </li>
                <% if (startPage > 2) { %>
                <li class="page-item disabled">
                  <span class="page-link">...</span>
                </li>
                <% } %>
                <% } %>
                
                <!-- Page numbers -->
                <% for (let p = startPage; p <= endPage; p++) { %>
                <li class="page-item <%= p === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="?<%= queryParams.toString() %>&page=<%= p %>">
                    <%= p %>
                  </a>
                </li>
                <% } %>
                
                <!-- Last page if not in range -->
                <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                <li class="page-item disabled">
                  <span class="page-link">...</span>
                </li>
                <% } %>
                <li class="page-item">
                  <a class="page-link" href="?<%= queryParams.toString() %>&page=<%= totalPages %>">
                    <%= totalPages %>
                  </a>
                </li>
                <% } %>
                
                <!-- Next Button -->
                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link" href="?<%= queryParams.toString() %>&page=<%= currentPage + 1 %>">
                    <span class="d-none d-md-inline me-1">Next</span>
                    <i class="fas fa-chevron-right d-none d-sm-inline"></i>
                    <span class="d-sm-none">›</span>
                  </a>
                </li>
                <% } %>
              </ul>
            </nav>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Styles -->
    <style>
      /* Card enhancements */
      .card {
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
      }
      
      .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
      }
      
      /* Table improvements */
      .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      }
      
      .table thead th {
        border: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.875rem;
        padding: 1.2rem 1rem;
        background: linear-gradient(135deg, #343a40 0%, #495057 100%);
      }
      
      .table tbody tr {
        border-bottom: 1px solid #f8f9fa;
        transition: all 0.3s ease;
      }
      
      .table tbody tr:hover {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        transform: scale(1.02);
      }
      
      .table tbody td {
        padding: 1.2rem 1rem;
        vertical-align: middle;
        border: none;
      }
      
      /* Button enhancements */
      .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }
      
      .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      }
      
      .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
      }
      
      .btn-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border: none;
      }
      
      /* Form improvements */
      .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
        padding: 0.75rem 1rem;
      }
      
      .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.15);
        transform: scale(1.02);
      }
      
      .input-group-text {
        border-radius: 10px 0 0 10px;
        border: 2px solid #e2e8f0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-right: none;
      }
      
      /* Badge improvements */
      .badge {
        font-weight: 500;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        letter-spacing: 0.3px;
      }
      
      /* Avatar styling */
      .rounded-circle {
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
      }
      
      .rounded-circle:hover {
        transform: scale(1.1);
      }
      
      /* Mobile Card special styling */
      .d-lg-none .card {
        border-left: 4px solid #28a745;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
      }
      
      /* Mobile optimizations */
      @media (max-width: 768px) {
        .card-body {
          padding: 1.2rem;
        }
        
        .pagination {
          font-size: 0.875rem;
        }
        
        .pagination .page-link {
          padding: 0.6rem 0.8rem;
          border-radius: 8px;
          margin: 0 2px;
        }
        
        .btn {
          font-size: 0.875rem;
        }
        
        h2 {
          font-size: 1.6rem;
        }
        
        .inq {
          padding: 0.7rem;
        }
        
        .cola {
          padding: 1rem;
        }
        
        .badge {
          font-size: 0.75rem;
          padding: 0.4rem 0.7rem;
        }
      }
      
      @media (max-width: 576px) {
        .card-title {
          font-size: 1rem;
        }
        
        .btn-sm {
          font-size: 0.75rem;
          padding: 0.4rem 0.6rem;
        }
        
        .pagination .page-link {
          padding: 0.4rem 0.6rem;
        }
        
        .rounded-circle {
          width: 45px !important;
          height: 45px !important;
        }
        
        h2 {
          font-size: 1.4rem;
        }
      }
      
      /* Loading animation */
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      
      .btn:disabled .fas {
        animation: spin 1s linear infinite;
      }
      
      /* Smooth transitions for all elements */
      * {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      /* Custom scrollbar */
      #right::-webkit-scrollbar {
        width: 8px;
      }
      
      #right::-webkit-scrollbar-track {
        background: linear-gradient(135deg, #f1f1f1 0%, #e9ecef 100%);
        border-radius: 4px;
      }
      
      #right::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #c1c1c1 0%, #a8a8a8 100%);
        border-radius: 4px;
      }
      
      #right::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #a8a8a8 0%, #999999 100%);
      }
      
      /* Header improvements */
      .d-flex.justify-content-between {
        background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(248,249,250,0.9) 100%);
        padding: 1rem;
        border-radius: 12px;
        backdrop-filter: blur(10px);
      }
    </style>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Add loading states to pay buttons
        document.querySelectorAll('.btn-success').forEach(btn => {
          btn.addEventListener('click', function() {
            const originalContent = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Processing...';
            this.disabled = true;
            
            // Re-enable after 3 seconds (in case of navigation issues)
            setTimeout(() => {
              this.innerHTML = originalContent;
              this.disabled = false;
            }, 3000);
          });
        });

        // Add loading state to filter form
        const filterForm = document.querySelector('form');
        if (filterForm) {
          filterForm.addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalContent = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Filtering...';
            submitBtn.disabled = true;
            
            // Re-enable after timeout
            setTimeout(() => {
              submitBtn.innerHTML = originalContent;
              submitBtn.disabled = false;
            }, 3000);
          });
        }

        // Smooth scroll for pagination
        document.querySelectorAll('.pagination .page-link').forEach(link => {
          link.addEventListener('click', function(e) {
            // Add loading state to pagination
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            
            // Smooth scroll to top
            setTimeout(() => {
              document.querySelector('.cola').scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
              });
            }, 100);
          });
        });

        // Add hover effects to mobile cards
        if (window.innerWidth < 992) {
          document.querySelectorAll('.d-lg-none .card').forEach(card => {
            card.addEventListener('touchstart', function() {
              this.style.transform = 'scale(0.98)';
            });
            
            card.addEventListener('touchend', function() {
              this.style.transform = 'scale(1)';
            });
          });
        }

        // Auto-focus search input on desktop
        if (window.innerWidth >= 768) {
          const nameInput = document.querySelector('input[name="name"]');
          if (nameInput && !nameInput.value) {
            nameInput.focus();
          }
        }
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>