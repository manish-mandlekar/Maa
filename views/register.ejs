<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      * {
        margin: 0%;
        padding: 0%;
        box-sizing: border-box;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }
      html,
      body {
        height: 100%;
        width: 100%;
      }
      #main {
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      #left {
        width: 18%;
        height: 100%;
        padding: 12px;
        border-right: 1px solid #dadada;
        background-color: white;
      }
      .cnt {
        width: 100%;
        height: 3vmax;
        padding: 2px;
        padding-left: 2vmax;
        display: flex;
        align-items: center;
        margin-top: 1vmax;
        gap: 1vmax;
      }
      .cnt > ion-icon {
        font-size: 1.4vmax;
        color: black;
      }
      .cnt > h3 {
        font-weight: 400;
        color: #315a51;
        text-transform: uppercase;
        font-size: 1.2vmax;
      }
      .cnt:hover {
        background-color: #f1f5fa;
      }
      #nav-logo {
        width: 100%;
        height: 7.4vmax;
      }
      #nav-logo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .container {
        width: 100%;
        height: 8rem;
        display: flex;
      }
      .lo {
        width: 70%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        font-size: 2vmax;
        padding-right: 6vmax;
      }
      .ro {
        width: 30%;
        height: 100%;
        display: flex;
        gap: 3.5vmax;
        padding-left: 2vmax;
        align-items: center;
        justify-content: center;
      }
      .ro > ion-icon {
        font-size: 1.5vmax;
      }
      #right {
        width: 82%;
        height: 100%;
        overflow-y: auto;
      }
      #cover {
        width: 100%;
        height: fit-content;
        background-color: #f1f5fa;

        padding: 1vmax;
      }
      .inq {
        width: 100%;
        height: fit-content;
        border-radius: 10px;
        background-color: rgb(255, 255, 255);
        margin-top: 2vmax;
        padding: 10px;
      }
    </style>
  </head>

  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div id="cover">
          <h1>Registration Form</h1>
          <div class="inq">
            <form action="/student/register" method="post" class="row g-3">
              <div class="col-md-1">
                <label for="inputEmail4" class="form-label">R_No</label>
                <input
                  required
                  type="text"
                  placeholder="Registration Number"
                  value="<%= r_no %>"
                  name="r_no"
                  class="form-control"
                  id="inputEmail4"
                  disabled
                />
                <input
                  required
                  type="hidden"
                  placeholder="Registration Number"
                  value="<%= typeof student !== 'undefined' ? student._id : '' %>"
                  name="inquiryId"
                  class="form-control"
                  id="inputEmail4"
                  disabled
                />
              </div>
              <div class="col-md-5">
                <label for="inputEmail4" class="form-label">Student Name</label>
                <input
                  required
                  type="text"
                  placeholder="Enter First Name"
                  name="firstName"
                  class="form-control"
                  id="inputEmail4"
                  value="<%= typeof student !== 'undefined' ? student.firstName : '' %>"
                />
              </div>
              <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Student Surname</label>
                <input
                  required
                  type="text"
                  name="lastName"
                  placeholder="Enter Last Name"
                  class="form-control"
                  id="inputPassword4"
                  value="<%= typeof student !== 'undefined' ? student.lastName : '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label">Student Email</label>
                <input
                  required
                  type="email"
                  name="email"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Email Address"
                  value="<%= typeof student !== 'undefined' ? student.email : '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label">Name of Father / Husband</label>
                <input
                  required
                  type="text"
                  name="fatherName"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Name Of Father / Husband"
                  value="<%= typeof student !== 'undefined' ? student.fatherName : '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label">Permanent Address</label>
                <input
                  required
                  type="text"
                  name="address"
                  class="form-control"
                  id="inputAddress"
                  placeholder="Enter Your Permanent Address"
                  value="<%= typeof student !== 'undefined' ? student.address : '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress2" class="form-label">Contact Number</label>
                <input
                  required
                  type="number"
                  name="contactNumber"
                  class="form-control"
                  id="inputAddress2"
                  placeholder="Enter Contact Number"
                  value="<%= typeof student !== 'undefined' ? student.contactNumber : '' %>"
                />
              </div>
              <div class="col-12">
                <label for="inputAddress2" class="form-label">WhatsApp Number</label>
                <input
                  required
                  type="whatsaapNumber"
                  name="whatsappNumber"
                  class="form-control"
                  id="inputAddress2"
                  placeholder="Enter WhatsApp Number"
                />
              </div>
              <div class="col-md-6">
                <label for="inputCity" class="form-label">Qualification</label>
                <input
                  required
                  name="qualification"
                  type="text"
                  class="form-control"
                  placeholder="Enter Qualification"
                  id="inputCity"
                  value="<%= typeof student !== 'undefined' ? student.qualification : '' %>"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Main Subject</label>
                <input
                  name="mainSubject"
                  required
                  type="text"
                  placeholder="Main Subject"
                  class="form-control"
                  id="inputZip"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Enquiry Date</label>
                <input
                  name="enquiryDate"
                  required
                  type="date"
                  class="form-control"
                  id="inputZip"
                />
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Date Of Birth</label>
                <input
                  name="dateOfBirth"
                  required
                  type="date"
                  class="form-control"
                  id="inputZip"
                />
              </div>
              <div class="inq">
                <div class="col-md-4" style="margin-bottom: 1vmax">
                  <label for="male">Male</label>
                  <input
                    required
                    type="radio"
                    id="male"
                    name="gender"
                    value="male"
                  />

                  <label for="female">Female</label>
                  <input
                    required
                    type="radio"
                    id="female"
                    name="gender"
                    value="female"
                  />
                </div>

                <div class="row g-3">
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label">Select Course</label>
                    <select name="course" class="form-select" required>
                      <option disabled>Choose a course...</option>
                      <% course.forEach(function(singlecourse) { %>
                      <option 
                        value="<%= singlecourse._id %>"
                        <%= typeof student !== 'undefined' && student.course._id === singlecourse._id.toString() ? 'selected' : '' %>
                      >
                        <%= singlecourse.courseName %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label">Medium</label>
                    <select name="medium" class="form-select" required>
                      <option selected disabled>Choose Medium...</option>

                      <option value="english">English Medium</option>
                      <option value="hindi">Hindi Medium</option>
                    </select>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label">Select University</label>
                    <select name="university" class="form-select" required>
                      <option selected disabled>Choose a University...</option>
                      <% universities.forEach(function(university) { %>
                      <option value="<%= university.name %>">
                        <%= university.name %> <%=university.location %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Session</label>
                    <select name="session" class="form-select" required>
                      <option selected disabled>Choose a Session...</option>
                      <% [ "2022-2023", "2023-2024", "2024-2025", "2025-2026",
                      "2026-2027", "2027-2028", "2028-2029","2029-2030","2030-2031","2031-2032","2032-2033","2033-2034","2034-2035"
                      ].forEach(function(session) { %>
                      <option value="<%= session %>"><%= session %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Session Month</label>
                    <select name="sessionMonth" class="form-select" required>
                      <option selected disabled>
                        Choose a Session Month...
                      </option>
                      <% ["January", "February", "March", "April", "May",
                      "June", "July", "August", "September", "October",
                      "November", "December" ].forEach(function(month) { %>
                      <option value="<%= month %>"><%= month %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="row mb-3 mt-3">
                    <div class="col-md-3">
                      <label for="yearOfPassing" class="form-label"
                        >Year of Passing</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        id="yearOfPassing"
                        name="yearOfPassing"
                        placeholder="e.g. 2023"
                        required
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="division" class="form-label">Division</label>
                      <select
                        class="form-select"
                        id="division"
                        name="division"
                        required
                      >
                        <option value="">Select</option>
                        <option value="1">1st Division</option>
                        <option value="2">2nd Division</option>
                        <option value="3">3rd Division</option>
                        <option value="4">Pass</option>
                      </select>
                    </div>
                    <div class="col-md-3">
                      <label for="marksPercentage" class="form-label"
                        >% of Marks</label
                      >
                      <input
                        type="number"
                        step="0.01"
                        class="form-control"
                        id="marksPercentage"
                        name="percentageOfMarks"
                        placeholder="e.g. 75.50"
                        required
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="boardUniversity" class="form-label"
                        >Board/University</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="boardUniversity"
                        name="boardOrUniversity"
                        placeholder="e.g. CBSE, RGPV"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-md-12">
                    <label for="inputEmail4" class="form-label"
                      >Category (Caste)</label
                    >
                    <select name="category" class="form-select" required>
                      <option selected disabled>Choose Caste...</option>

                      <option value="SC">Scheduled Castes (SC)</option>
                      <option value="ST">Scheduled Tribes (ST)</option>
                      <option value="OBC">Other Backward Classes (OBC)</option>
                      <option value="General">General</option>
                    </select>
                  </div>
                  <div class="col-12">
                    <label for="inputAddress2" class="form-label"
                      >UID Number</label
                    >
                    <input
                      required
                      type="number"
                      name="addharNo"
                      class="form-control"
                      id="inputAddress2"
                      placeholder="Enter UID Number"
                    />
                  </div>
                  <div class="row mb-3 mt-3">
                    <!-- Family Income -->
                    <div class="col-md-4">
                      <label for="familyIncome" class="form-label"
                        >Family Income (Yearly)</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        id="familyIncome"
                        name="familyIncome"
                        placeholder="e.g. 500000"
                        required
                      />
                    </div>

                    <!-- Religion -->
                    <div class="col-md-4">
                      <label for="religion" class="form-label">Religion</label>
                      <select
                        class="form-select"
                        id="religion"
                        name="religion"
                        required
                      >
                        <option value="">Select Religion</option>
                        <option value="Hindu">Hindu</option>
                        <option value="Muslim">Muslim</option>
                        <option value="Christian">Christian</option>
                        <option value="Sikh">Sikh</option>
                        <option value="Buddhist">Buddhist</option>
                        <option value="Jain">Jain</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>

                    <!-- Marital Status -->
                    <div class="col-md-4">
                      <label for="maritalStatus" class="form-label"
                        >Marital Status</label
                      >
                      <select
                        class="form-select"
                        id="maritalStatus"
                        name="maritalStatus"
                        required
                      >
                        <option value="">Select Status</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Widowed">Widowed</option>
                        <option value="Divorced">Divorced</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-6">
                    <label for="inputAddress" class="form-label"
                      >Enquiry By</label
                    >
                    <input
                      required
                      type="text"
                      name="enquiryBy"
                      class="form-control"
                      id="inputAddress"
                      placeholder="Enter Name"
                    />
                  </div>
                  <div class="col-6">
                    <label for="inputAddress2" class="form-label">
                      Like To Join
                    </label>
                    <input
                      required
                      type="date"
                      name="joiningDate"
                      class="form-control"
                      id="inputAddress2"
                    />
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label"
                      >You Came To Know About Institute By:</label
                    >
                    <select
                      id="inputState"
                      name="reference"
                      class="form-select"
                    >
                      <option selected>Choose...</option>
                      <option>Sign Board</option>
                      <option>Advertisement Papers</option>
                      <option>Google Search</option>
                      <option>Instagram</option>
                      <option>Facebook</option>
                      <option>Personal Reference</option>
                      <option>Other</option>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label"
                      >Registration Payment Mode:</label
                    >
                    <select
                      name="registrationPaymentMode"
                      id="inputState"
                      class="form-select"
                    >
                      <option selected>Cash</option>
                      <option>Phone pe</option>
                      <option>Google pay</option>
                      <option>Cheque</option>
                    </select>
                  </div>
                </div>

                <div class="row g-3" style="margin-top: 1vmax">
                  <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"
                      >Installment</label
                    >
                    <input
                      required
                      type="number"
                      name="installment"
                      class="form-control"
                      id="inputEmail4"
                      placeholder="Enter Installment Amount"
                    />
                  </div>
                  <div class="col-md-6" style="margin-top: 1vmax">
                    <label for="inputPassword4" class="form-label">Due</label>
                    <input
                      required
                      type="number"
                      name="due"
                      class="form-control"
                      id="inputPassword4"
                      placeholder="Enter Due Amount"
                    />
                  </div>
                </div>
                <div class="col-md-4" style="margin-top: 1vmax">
                  <label for="inputState" class="form-label"
                    >Registration Payment:</label
                  >
                  <select
                    name="registrationPayment"
                    id="inputState"
                    class="form-select"
                  >
                    <option selected>Done</option>
                    <option>Not Done</option>
                  </select>
                </div>
                <div class="col-md-6" style="margin-top: 1vmax">
                  <label for="inputPassword4" class="form-label"
                    >Due Amount Date</label
                  >
                  <input
                    required
                    type="date"
                    name="dueDate"
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Enter Due Amount date"
                  />
                </div>

                <div class="col-12" style="margin-top: 1vmax">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
